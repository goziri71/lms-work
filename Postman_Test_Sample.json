{
  "info": {
    "name": "LMS Exam API - Quick Test",
    "description": "Simple test collection for exam endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "staffToken",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
      "type": "string"
    },
    {
      "key": "studentToken",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Create Exam (Random Mode)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{staffToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"course_id\": 1,\n  \"academic_year\": \"2024/2025\",\n  \"semester\": \"1ST\",\n  \"title\": \"Test Midterm Exam\",\n  \"instructions\": \"Answer all questions carefully. You have 2 hours to complete this exam.\",\n  \"start_at\": \"2024-12-20T09:00:00Z\",\n  \"end_at\": \"2024-12-20T11:00:00Z\",\n  \"duration_minutes\": 120,\n  \"visibility\": \"draft\",\n  \"randomize\": true,\n  \"exam_type\": \"mixed\",\n  \"selection_mode\": \"random\",\n  \"objective_count\": 10,\n  \"theory_count\": 3\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/exams",
          "host": ["{{baseUrl}}"],
          "path": ["exams"]
        }
      }
    },
    {
      "name": "2. Create Exam (Manual Mode)",
